---
---
{
  "type": "FeatureCollection",
  "features": [{% assign places = (site.posts) %}{% for place in places %}{% if place.coordinates %}{% assign type = place.coordinates | size %}
    {
      "type": "Feature",
      "properties": {
        "title": "{{ place.title }}",
        "image": "{{ place.image | prepend: site.baseurl | replace: '//', '/' }}",
        "url": "{{place.url | prepend: site.url | replace: '//', '/' }}",
        "marker-size": "medium",
        "marker-symbol": "{{ place.number }}",
        "marker-color": "#9b59b6"
      },
      "geometry": { {% case type %}{% when 1 %}
        "type": "Point",
        "coordinates": [{{ place.coordinates }}]{% else %}
        "type": "MultiPoint",
        "coordinates": [ {% for coord in place.coordinates %}
          [{{coord}}]{% if forloop.last != true %},{% endif %}{% endfor %}
        ]{% endcase %}
      }
    }{% if forloop.rindex > 1 %},{% endif%}{% endif %}{% endfor %}

  ]
}
